<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <backgroundcolor>FF000000</backgroundcolor>
    <controls>
        <!-- Black Background as per WO-007 -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <colordiffuse>FF000000</colordiffuse>
            <texture />
        </control>

        <!-- Left Navigation Rail placeholder as per WO-009 -->
        <control type="panel" id="9000">
            <posx>0</posx>
            <posy>0</posy>
            <width>300</width> <!-- Example width, adjust later -->
            <height>1080</height>
            <orientation>vertical</orientation>
            <backgroundcolor>FF0A0A0A</backgroundcolor> <!-- Slightly different black for distinction -->
            <controls>
                <!-- Navigation Items placeholders as per WO-010, WO-011 -->
                <control type="grouplist">
                    <posx>0</posx>
                    <posy>100</posy> <!-- Offset from top -->
                    <width>300</width>
                    <height>auto</height>
                    <itemgap>10</itemgap>
                    <orientation>vertical</orientation>
                    <control type="button" id="50"> <!-- Home Button -->
                        <width>300</width>
                        <height>50</height>
                        <label>Home</label>
                        <font>Exo2-Regular-24</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFF0000</focusedcolor>
                        <onclick>ReplaceWindow(Home)</onclick>
                    </control>
                    <control type="button" id="51"> <!-- Movies Hub Button -->
                        <width>300</width>
                        <height>50</height>
                        <label>Movies</label>
                        <font>Exo2-Regular-24</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFF0000</focusedcolor>
                        <onclick>ActivateWindow(Videos,Custom_1101_Hub_Movies.xml,return)</onclick>
                    </control>
                    <control type="button" id="52"> <!-- TV Shows Hub Button -->
                        <width>300</width>
                        <height>50</height>
                        <label>TV Shows</label>
                        <font>Exo2-Regular-24</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFF0000</focusedcolor>
                        <onclick>ActivateWindow(Videos,Custom_1102_Hub_TVShows.xml,return)</onclick>
                    </control>
                     <control type="button" id="53"> <!-- Anime Hub Button for WO-017 -->
                        <width>300</width>
                        <height>50</height>
                        <label>Anime</label>
                        <font>Exo2-Regular-24</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFF0000</focusedcolor>
                        <onclick>ActivateWindow(Videos,Custom_1103_Hub_Anime.xml,return)</onclick>
                    </control>
                </control>
            </controls>
        </control>

        <!-- "Movies In Progress" Placeholder as per WO-018 -->
        <control type="label">
            <posx>350</posx> <!-- Outside left rail -->
            <posy>100</posy>
            <width>800</width>
            <height>40</height>
            <label>Movies In Progress (Placeholder)</label>
            <font>Exo2-Regular-30</font>
            <textcolor>FFFFFFFF</textcolor>
        </control>

        <!-- "TV Shows In Progress" Placeholder as per WO-019 -->
        <control type="label">
            <posx>350</posx> <!-- Outside left rail -->
            <posy>200</posy>
            <width>800</width>
            <height>40</height>
            <label>TV Shows In Progress (Placeholder)</label>
            <font>Exo2-Regular-30</font>
            <textcolor>FFFFFFFF</textcolor>
        </control>

    </controls>
</window>