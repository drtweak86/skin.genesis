<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.genesis" name="Genesis" provider-name="Genesis Team" version="1.0.0">
    <requires>
        <import addon="xbmc.gui" version="5.17.0" />
    </requires>
    <extension point="xbmc.gui.skin">

        <res width="1920" height="1080" folder="1080i" default="true" />
        <defaultresolution>1080i</defaultresolution>
        <defaultthemename>Default</defaultthemename>
    </extension>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Genesis skin scaffold</summary>
        <description lang="en">Minimal Genesis skin scaffold for iteration.</description>
        <platform>all</platform>
        <license>MIT</license>
    </extension>
</addon>
